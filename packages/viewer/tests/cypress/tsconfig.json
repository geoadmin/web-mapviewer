{
    "extends": "@swissgeo/config-typescript/tsconfig.vue.json",
    // @see https://docs.cypress.io/app/tooling/typescript-support
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["es6", "dom", "ES2024"],
        "sourceMap": true,
        "types": ["cypress", "node"],
        "paths": {
            "@/*": ["../../src/*"]
        }
    },
    "include": ["**/*.ts", "**/*.cy.ts", "../../types/*.ts"]
}
