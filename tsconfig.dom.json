{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.json", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES6",
        "paths": {
            "@/*": ["./src/*"]
        },
        // see https://www.typescriptlang.org/tsconfig#allowJs
        "allowJs": true

        // we do not specify "types" so that all @types/... import from our package.json are included
    }
}
